doctype html
html(lang='en')

  //- Variable block for page-specific info
  block vars

  head

    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(charset='utf-8')
    meta(name='viewport',content='width=device-width, initial-scale=1, minimum-scale=1')

    meta(name='description', content=pageDescription)
    meta(name='author', content='Saad')

    title #{pageTitle}

    link(rel='shortcut icon', href='/assets/images/favicon.png')

    link(rel='stylesheet', href='/assets/css/main.css')

    meta(property='og:locale', content='en_US')
    meta(property='og:type', content='website')
    meta(property='og:site_name', content='Dress Saad Amir')
    meta(property='og:title', content='Dress Saad Amir')
    meta(property='twitter:title', content='Dress Saad Amir')
    meta(property='og:image:width', content='1200')
    meta(property='og:image:height', content='630')

  body(class=bodyClass)

    block content

    script(type='text/javascript' src='/assets/js/gallery.js')